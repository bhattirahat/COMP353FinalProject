<%- include('../includes/head.ejs') %>
<!-- link to css files -->
</head>

<body>
    <main class="d-flex flex-nowrap">
        <%- include('../includes/Sidebar.ejs') %>
        <div class="d-flex flex-column mb-3" style="margin: 20px;">

            <%- include('../includes/queryNav.ejs') %>
            <p>List the emails generated by a given facility. The results should be displayed in ascending order by the date of the emails. </p>
            <br>
            <form action="/homepage/query10" method="GET">
                <div class="form-group">
                    <div class="row mb-3" style="width: 700px;">
                        <label for="facility_id" class="col-2 col-form-label">Facility ID</label>
                        <div class="col-5">
                            <input type="number" class="form-control" id="facility_id" placeholder="Enter Facility ID" name="facility_id">
                        </div>
                        <div class="col-3">
                            <button type="submit" class="btn btn-primary mb-3">Submit</button>
                        </div>
                    </div>
                </div>
            </form>

            <table id="query10_table" class="table table-hover" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th>Facility</th>
                        <th>Send Date</th>
                        <th>Receiver</th>
                        <th>Subject</th>
                        <th>Body</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (email.length >  0) {%>
                    <% for (let e of email) {%>
                    <tr>
                        <td><%= e.Email_id %></td>
                        <td><%= e.name%></td>
                        <td><%= e.Email_Sent_Date%></td>
                        <td><%= e.first_name%> <%= e.last_name%></td>
                        <td><%= e.Email_Subject%></td>
                        <td><%= e.Body%></td>
                    </tr>
                    <% }%>
                    <% }%>
                </tbody>
            </table>
        </div>



    </main>

    <%- include('../includes/end.ejs') %>