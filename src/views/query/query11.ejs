<%- include('../includes/head.ejs') %>
<!-- link to css files -->
</head>

<body>
    <main class="d-flex flex-nowrap">
        <%- include('../includes/Sidebar.ejs') %>
        <div class="d-flex flex-column mb-3" style="margin: 20px;">

            <%- include('../includes/queryNav.ejs') %>
            <p>For a given facility, generate a list of all the doctors and nurses who have been on schedule to work in the last two weeks. The list should include first-name, last-name, and role. Results should be displayed in ascending order by role, then by first name. </p>

            <form action="/homepage/query11/getInfo" method="GET">
                <div class="form-group">
                    <label for="Facility">Facility ID</label>
                    <input type="number" class="form-control" id="FCL" placeholder="Enter Facility ID" name="FCL">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

            <table id="query11_table" class="table table-striped table-sm">
                <thead class="table-light">
                    <tr>
                        <th scope="col"># Employee ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Type</th>
                        <th scope="col"># Facility Id </th>
                        <th scope="col">Work Date #</th>
                    </tr>
                </thead>
                <tbody>
                    <%if(data.length>0){ %>
                    <%data.forEach(entry =>{  %>
                    <tr>
                        <td><%=entry.employee_id%></td>
                        <td><%=entry.first_name%></td>
                        <td><%=entry.last_name%></td>
                        <td><%=entry.Type%></td>
                        <td><%=entry.facility_id%></td>
                        <td><%=entry.Work_Date%></td>

                    </tr>
                    <%})}%>
                </tbody>
            </table>





        </div>


    </main>

    <%- include('../includes/end.ejs') %>